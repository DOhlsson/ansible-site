# Created by Ansible playbook

deb {{debian_mirror}} {{debian_release}} main contrib non-free
deb-src {{debian_mirror}} {{debian_release}} main contrib non-free

deb {{debian_mirror}} {{debian_release}}-updates main contrib non-free
deb-src {{debian_mirror}} {{debian_release}}-updates main contrib non-free

{% if debian_release == 'bullseye' %}
deb http://security.debian.org/debian-security bullseye-security main contrib non-free
deb-src http://security.debian.org/debian-security bullseye-security main contrib non-free
{% else %}
deb http://security.debian.org/debian-security {{debian_release}}/updates main contrib non-free
deb-src http://security.debian.org/debian-security {{debian_release}}/updates main contrib non-free
{% endif %}
